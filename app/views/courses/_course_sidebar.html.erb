<div style="width: 100%; height: 100%; overflow: auto;">
  <div class="wrapper-image-square">
    <%= image_tag "Neuschwanstein.jpg"%>
  </div>
  <div style="position: relative; padding: 20px;">
    <% if is_ceo? current_user.id, @course.id %>
      <%= link_to( "#modal_edit_course", class:"btn-floating blue", style:"position: absolute; top: -20px; right: 5px;") do %>
        <i class="material-icons">mode_edit</i> 
      <% end %>
    <% else %>
      <% if !is_member? current_user.id, @course.id %>

        <form accept-charset="UTF-8" action="<%= request_course_access_courses_path %>" method="post" id="add_member_to_course" >
          <input name="utf8" type="hidden" value="&#x2713;" />
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
          <%= hidden_field_tag :user_id, current_user.id %>
          <%= hidden_field_tag :course_id, @course.id %>
          <%= button_tag(name: "add_member", :class => "btn-floating blue", :style=>"position: absolute; top: -20px; right: 5px;") do %>
            <i class="material-icons">done</i>
          <% end %>
        </form>

      <% end %>
    <%end%>
    <div style="margin-bottom: : 10px;">
      <span style="font-weight: bold; color: #424242; font-size: 28px;"><%= @course.name%></span>
    </div>
    <div class="">
      <%= @course.description %>
    </div>
  </div>
</div>