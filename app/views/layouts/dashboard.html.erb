<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>
  <body>
  	<header>
  		<div class="navbar-fixed">
		  	<nav class="z-depth-0" style="background-color: #4c59cd;">
		  		<div class="nav__content">
					  <div class="nav-wrapper">
					  	<%= link_to "LOGO", root_url, class:"brand-logo white-text"%> 
					    <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons white-text">menu</i></a>
					    <ul class="right hide-on-med-and-down">
					    	<!-- Dropdown Trigger -->
                <li>
                  <%= link_to("#!", data:{activates:"dropdown1"}, class:"dropdown-button img-height-size") do %>
                    <%= image_tag "user_boy.svg", width: "48", height: "64", class: "circle"%>
                    <i class="material-icons right">arrow_drop_down</i>
                  <% end %>
                </li>
                <li><a href=""></a></li>
					    </ul>
					    <ul class="side-nav" id="mobile-demo">
					    	<li><%= link_to "Log out", logout_path, method: "delete" %></li>
					    </ul>
					  </div>
					</div>
				</nav>
			</div>
      <div style="height: 48px;">
        <div class="z-depth--light" style="position: fixed; width: 100%; height: 48px; background-color: white; z-index: 996;">
          <%= yield :bar_option %>
        </div>
      </div>
      
			<!-- Dropdown Structure -->
			<ul id="dropdown1" class="dropdown-content" style="margin-top: 64px;">
			  <li><a href="#!">ones</a></li>
			  <li class="divider"></li>
			  <li><a href="#!">two</a></li>
			  <li class="divider"></li>
			  <li><%= link_to "Log out", logout_path, method: "delete" %></li>
			</ul>
  	</header>

		<main style="height: calc(100% - 112px);">
      <div class="center-block" style="width: 90%; height: 100%; padding: 20px;">
        <%= yield %>
      </div>
		</main>
		<script type="text/javascript">
			$( document ).ready(function(){
		    $(".button-collapse").sideNav();
        $('.modal').modal();
			})
		</script>
  </body>
</html>
