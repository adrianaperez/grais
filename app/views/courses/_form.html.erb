<%= form_for(@course, url: courses_path, remote: true) do |f| %>
  <div class="modal-content">
    <h4>New course</h4>
  
    <div class="input-field ">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="input-field ">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>   
  </div>
  <div class="modal-footer">
    <%= f.submit "Create", class: "btn" %>
    <a href="#!" data-turbolinks="false" class=" modal-action modal-close waves-effect waves-green btn-flat red lighten-2" >Cancel</a> 
  </div>
<% end %>