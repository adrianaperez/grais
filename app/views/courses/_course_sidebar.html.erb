<div style="width: 100%; height: 100%; overflow: auto;">
  <div class="wrapper-image-square">
    <%= image_tag "Neuschwanstein.jpg"%>
  </div>
  <div style="position: relative; padding: 20px;">
    <% if is_ceo? current_user.id, @course.id %>
      <%= link_to( "#modal2", class:"btn-floating blue", style:"position: absolute; top: -20px; right: 5px;") do %>
        <i class="material-icons">mode_edit</i> 
      <% end %>
    <% else %>
      <% if !is_member? current_user.id, @course.id %>
        <a class="btn-floating blue" style="position: absolute; top: -20px; right: 5px;"><i class="material-icons">done</i></a>
      <% end %>
    <%end%>
    <div style="margin-bottom: : 10px;">
      <span style="font-weight: bold; color: #424242; font-size: 28px;"><%= @course.name%></span>
    </div>
    <div class="">
      <%= @course.description %>
    </div>
  </div>
</div>