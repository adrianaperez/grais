<div class="center-block" style="width: 90%; padding-top: 20px;">
  <div class="row">
    <div class="col s6 m3 l3">
      <div class="wrapper-image square">
        <%= image_tag "Neuschwanstein.jpg"%>
      </div>
      <%= link_to("#modal_change_password") do %>
        <span>Editar password</span> <i class="material-icons" style="color: #85adad;">mode_edit</i>
      <% end %>
      <%= link_to("#modal_edit_profile") do %>
        <span>Editar perfil</span> <i class="material-icons" style="color: #85adad;">mode_edit</i>
      <% end %>
    </div>
    <div class="col s12 m9 l9" style="padding-top: 20px;">
      <div>
        <span style="font-weight: bold;">Name:</span> <%= current_user.names.capitalize%> 
      </div>
      <div>
        <span style="font-weight: bold;">Lastname:</span> <%= current_user.lastnames.capitalize%>
      </div>
      <div>
        <span style="font-weight: bold;">Email:</span> <%= current_user.email %>
      </div>
      <div>
        <span style="font-weight: bold;">Pasword</span>
      </div>
      <div>
        <span style="font-weight: bold;">Phone:</span> <span>0424-7811229</span>
      </div>
      <div>
        <span style="font-weight: bold;">Country:</span> <span>Venezuela</span>
      </div>
      <div>
        <span style="font-weight: bold;">State:</span> <span>Mérida</span>
      </div>
      <div>
        <span style="font-weight: bold;">Skills:</span>
        <p>Aqui una breve descripción de los talentos del usuario</p>
      </div>
    </div>
  </div>
</div>
<!-- Modal Structure - Edit user -->
<div id="modal_edit_profile" class="modal">
  <%= render "edit_form" %>
</div>

<div id="modal_change_password" class="modal">
  <%= render "edit_password_form" %>
</div>

<% content_for :js do %>
  $(".sidebar").addClass('hidden-sidebar');
  $('.wrapper-submenu').hide();
<% end %>  