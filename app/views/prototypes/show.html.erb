    <li class="tab hide-on-med-and-up"><a href="#product_prototype_information" style="outline: none;">informaci√≥n</a></li>
    <li class="tab"><a id="get_product_prototype_commitments" class="active" href="#product_prototype_commitments" style="outline: none;">compromisos prototipos</a></li>
  </ul>      
<% end %>

<div id="prototype_id" data-id = "<%= @prototype.id %>" style="display: none;"></div>

