<% provide(:title, "Forgot your password?") %>

<% content_for :option do %>
  <li><%= link_to "Login", login_path, class:"indigo-text text-accent-4"%></li>
  <li><%= link_to "Sign up", signup_path, class:"indigo-text text-accent-4"%></li>
<% end %>

<div class="container">
  <div class="row">
    <div class="col l6 offset-l3">
      <h2>Send your e-mail</h2>
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
          <div class="input-field ">
            <%= f.email_field :email %>
            <%= f.label :email %>
          </div>
          <button class="btn waves-effect waves-light" type="submit" name="action">Send
          </button> 
        <% end %>
    </div>
  </div>
</div>
