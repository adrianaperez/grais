<% provide(:title, 'Sign up') %>

<% content_for :option do %>
  <li><%= link_to "Login", login_path, class:"indigo-text text-accent-4"%></li>
<% end %>

<div class="container">
  <div class="row">
    <div class="col s12 l6 offset-l3">
      <h4 class="indigo-text text-accent-4">Sign up</h4>
      <%= render "shared/error_messages" %>
      <form accept-charset="UTF-8" action="<%= signup_path %>" class="col s12"
            id="new_user" method="post">
        <input name="utf8" type="hidden" value="&#x2713;" />
        <input name="authenticity_token" type="hidden"
               value="<%= form_authenticity_token %>" />
               
        <div class="input-field ">
          <i class="material-icons prefix input__icon--color">account_box</i>
          <input id="user_names" name="user[names]" type="text" />
          <label for="user_names">Name</label>
        </div>
        <div class="input-field ">
          <i class="material-icons prefix input__icon--color">account_box</i>
          <input id="user_lastnames" name="user[lastnames]" type="text" />
          <label for="user_lastnames">Lastname</label>
        </div>
        <div class="input-field ">
          <i class="material-icons prefix input__icon--color">email</i>
          <input id="user_email" name="user[email]" type="email" />
          <label for="user_email">Email</label>
        </div>
        <div class="input-field ">
          <i class="material-icons prefix input__icon--color">lock</i>
          <input id="user_password" name="user[password]"
                 type="password" />
          <label for="user_password">Password</label>
        </div>
        <div class="input-field ">
          <i class="material-icons prefix input__icon--color">confirmation_number</i>
          <input id="user_password_confirmation"
                 name="user[password_confirmation]" type="password" />
          <label for="user_password_confirmation">Confirmation</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Log in
        </button> 
      </form>
    </div>
  </div>
</div>