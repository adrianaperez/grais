<% content_for :menu do %> 
  <a href="#" id="btn-sidebar" data-turbolinks="false" class="hide-on-small-only"><i class="material-icons left">list</i></a>
  <a href="#" data-activates="slide-out" class="sidenavbar hide-on-med-and-up"><i class="material-icons left">list</i></a>
<% end %>
<% content_for :sidenav do %>
  <ul id="slide-out" class="side-nav">
    <li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li>
    <li><a href="#!">Second Link</a></li>
    <li><div class="divider"></div></li>
    <li>
    <%= link_to( dashboard_path ) do %>
      <i class="material-icons color-text-panal">dashboard</i><span style="color: black;">Dashboard</span>
    <% end %>
  </li>
  <li>
    <%= link_to( courses_path ) do %>
      <i class="material-icons color-text-course">apps</i><span style="color: black;">Courses</span>
    <% end %>
  </li>
  </ul>
<% end %>
<% content_for :bar_option do %> 
  <ul class="tabs center-block" style="width: 80%">
    <li class="tab"><a class="active" href="#my_courses" style="outline: none;">my courses</a></li>
    <li class="tab"><a href="#member" style="outline: none;">member</a></li>
    <li class="tab"><a href="#all_courses" id="get_all_courses" data-clicked ="false" data-turbolinks="false" style="outline: none;">all courses</a></li>
  </ul>      
<% end %>

<div id="my_courses">
  <% if @my_courses.any? %>
    <%= render @my_courses %>
    <div class="fixed-action-btn">
      <a href="#modal1" class="btn-floating btn-large tooltipped indigo"
      data-position="left" data-delay="50" data-tooltip="New course">
        <i class="large material-icons">add_circle_outline</i>
      </a>
    </div>
  <%else%>
    <h4 class="center" style="color: #94b8b8; font-weight: bold;">You don't have any courses</h4>
    <div class="center">
      <a href="#modal1" style="outline: none; display: inline-flex; flex-direction: column;">
        <i class="material-icons circle center" style="color: #85adad; font-size: 56px;">add_circle_outline</i>
        <span style="color: #85adad; font-size: 28px;">New course</span>
      </a>
    </div>    
  <%end%>
</div>
<!-- Modal Structure - New course -->
<div id="modal1" class="modal">
  <%= render "form" %>
</div>
</div>
<div id="member">
  <h4 style="margin: 0;">Member</h4>
</div>
<div id="all_courses">

</div>